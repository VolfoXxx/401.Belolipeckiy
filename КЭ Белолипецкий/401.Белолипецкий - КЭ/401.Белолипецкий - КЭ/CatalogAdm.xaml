            <Button x:Name="btn_1" BorderBrush="#FF009FD6" Background="#FF009FD6" Content="Книга 1" Foreground="#FF004165" FontSize="18" Height="27" Width="364"/>
            <Button x:Name="btn_2" BorderBrush="#FF009FDA" Background="#FF009FDA" Content="Книга 2" Foreground="#FF004165" FontSize="18" Height="27" Width="364"/>
            <Button x:Name="btn_3" BorderBrush="#FF009FDA" Background="#FF009FDA" Content="Книга 3" Foreground="#FF004165" FontSize="18" Height="27" Width="364"/>
        </ListBox>
        <Button Content="Добавить" BorderBrush="#FF009FDA" Background="#FF004165" Foreground="#FF009FDA" HorizontalAlignment="Left" Margin="446,98,0,0" VerticalAlignment="Top" Width="320" FontSize="22" Height="45"/>
        <Button Content="Удалить" BorderBrush="#FF009FDA" Background="#FF004165" Foreground="#FF009FDA" HorizontalAlignment="Left" Margin="446,148,0,0" VerticalAlignment="Top" Width="320" FontSize="22" Height="45"/>


    </Grid>
</Window>
